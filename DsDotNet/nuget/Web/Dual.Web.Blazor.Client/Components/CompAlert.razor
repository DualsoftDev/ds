@* CompAlert *@
@* https://github.com/DevExpress/blazor-training-samples/blob/master/WebAssembly/ComponentStructure/final/Demo1/Demo1/Shared/Alert.razor *@

﻿<div class="alert @AlertClass" role="alert">
    @if (!string.IsNullOrEmpty(Title))
    {
        <h4 class="alert-heading">@Title</h4>
        <div>@ChildContent</div>
    }
    else
    {
        @ChildContent
    }
</div>

@code {
    public enum AlertType
    {
        Primary,
        Secondary,
        Success,
        Danger,
        Warning,
        Info,
        Light,
        Dark
    }

    [Parameter]
    public AlertType Type { get; set; } = AlertType.Primary;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    string AlertClass => $"alert-{Type.ToString().ToLower()}";

    [Parameter]
    public string Title { get; set; }
}