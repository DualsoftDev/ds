    - include: '#comments'
    - include: $self

  macros:
    patterns:
    - name: macro2.ds
      begin: \[\s*(macro)\s*(=\s*([가-힣a-zA-Z_][가-힣a-zA-Z_0-9]*))?\s*\]\s*=\s*(\{)
      beginCaptures:
