<h3>PageCardAlert</h3>
@* https://github.com/DevExpress/blazor-training-samples/blob/master/WebAssembly/ComponentStructure/final/Demo1/Demo1/Pages/Index.razor *@

@page "/snippets/card-alert"


<CompAlert Type="CompAlert.AlertType.Warning" Title="Warning Warning">
    Something really cool just happened!
</CompAlert>

<CompCard Title="Cards are useful for structure">
    <Content>
        They contain content, which is usually text. Other
        types of elements are also supported though.
    </Content>
    <TitleTemplate Context="title">
        <h1 class="card-title text-danger">@title</h1>
    </TitleTemplate>
    <Header>
        <h3>Info</h3>
    </Header>
    <Footer>
        This is the end of the card
    </Footer>
</CompCard>