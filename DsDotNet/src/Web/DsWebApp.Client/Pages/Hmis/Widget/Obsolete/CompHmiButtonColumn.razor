@* CompHmiButtonColumn *@

@using System.Reactive.Subjects
@*
https://supportcenter.devexpress.com/ticket/details/t1135370/grid-for-blazor-how-to-create-reusable-dxgridcommandcolumn
*@


@inherits DxGridCommandColumn
@base.BuildRenderTree


@code {
    [Parameter] public Nullable<int> ForceWidth { get; set; }
    [Parameter] public Func<object, TagWeb> TagGetter { get; set; }


    protected override bool ShouldRender() => false;

    protected override void OnInitialized() {
        base.OnInitialized();
        Width = (ForceWidth == null) ? "80px" : $"{ForceWidth}px";
        HeaderTemplate = context => @<span>@Caption</span>;
        CellDisplayTemplate = context =>
        {
            object row = context.DataItem;
            return@<WgtPb Text="@Caption" DataItem="@row" TagGetter="@TagGetter" />    ;
        };
    }
}
