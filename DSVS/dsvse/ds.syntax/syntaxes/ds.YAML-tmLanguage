  imports:
    patterns:
    - name: import.ds
      begin: \s*(!#import)\s*([가-힣a-zA-Z_][가-힣a-zA-Z_0-9]*) (as) ([가-힣a-zA-Z_][가-힣a-zA-Z_0-9]*) (from) (\"[^\"]+\")
      beginCaptures:
