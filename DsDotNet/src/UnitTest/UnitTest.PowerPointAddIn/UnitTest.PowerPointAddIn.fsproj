<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
		<LangVersion>8.0</LangVersion>
		<NoWarn>$(NoWarn);NU1702;NU1702</NoWarn>
		<IsPackable>false</IsPackable>
        <GenerateProgramFile>false</GenerateProgramFile>
        <IsTestProject>true</IsTestProject>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="PowerPointAddInHelperTest.fs" />
        <Compile Include="Program.fs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.11.0" />
        <PackageReference Include="xunit" Version="2.9.0" />
		<PackageReference Include="xunit.runner.visualstudio" Version="2.8.2"/>
		<PackageReference Include="coverlet.collector" Version="6.0.2" />
    </ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\Apps\OfficeAddIn\PowerPointAddInHelper\PowerPointAddInHelper.csproj" />
		<ProjectReference Include="..\..\..\Apps\OfficeAddIn\PowerPointAddInShared\PowerPointAddInShared.fsproj" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="copy $(ProjectDir)..\..\..\Apps\OfficeAddIn\PowerPointAddInHelper\Utils\HelloDS.pptx $(TargetDir)HelloDS.pptx" />
	</Target>
	
</Project>
