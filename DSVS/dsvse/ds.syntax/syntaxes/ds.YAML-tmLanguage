      end: ';'

    - name: import.ds
      begin: \s*(!#import)\s*\{
      beginCaptures:
        '1': {name: keyword.other.import.ds}
      end: \}\s*(from)\s*(\"[^\"]+\")\s*;
      endCaptures:
        '1': {name: keyword.other.import.ds}
        '2': {name: string.quoted.double.ds}
      patterns:
      - name: keyword.other.as.ds
        match: 'as'
      - name: punctuation.comma.ds
