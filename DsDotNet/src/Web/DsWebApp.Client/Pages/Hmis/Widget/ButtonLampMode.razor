@* ButtonLampMode *@

@inherits ButtonLampModeBase
@if (!_loading)
{
    @base.BuildRenderTree
}


@code {
    bool _loading = true;

    [Parameter] public CsHMIPushLampMode Composite { get; set; }
    protected async override Task OnInitializedAsync()
    {
        (Button, Lamp, Mode) = (Composite.Item1.Item1, Composite.Item1.Item2, Composite.Item2);

        // base initializer 를 후반에 배치. 위의 값들을 먼저 설정한 후에 수행
        await base.OnInitializedAsync();

        _loading = false;
    }
}
