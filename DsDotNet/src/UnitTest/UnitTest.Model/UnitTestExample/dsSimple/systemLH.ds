[sys] LH = {
    [interfaces] = {
        RUN = { F.Work ~ F.Done };
        ADV = { F.Vp ~ F.Sp };
        RET = { F.Vm ~ F.Sm };
        ADV <|> RET;
    }
    
    [flow] F = {
        Work > Done;
        Work = {
            Ap > Am;
        }
        Vp > Sp;
        Vm > Sm;
    }

    [jobs] = {
        Ap = { RH.ADV(_, _); }
        Am = { RH.RET(_, _); }
    }
  
    [external file="systemRH.ds"] RH;
}
