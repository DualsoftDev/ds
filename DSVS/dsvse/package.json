{
	"name": "ds",
	"displayName": "DS - Digital Twin Segment Language",
	"author": "dualsoft",
	"license": "MIT",
	"description": "Syntaxes for DS language. DS mean Digital Twin Segment Language",
	"icon": "logo.png",
	"version": "1.0.14",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "dualsoft",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.66.0"
	},
	"activationEvents": [
		"onLanguage:ds",
		"onCommand:ds.dsview"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"dsLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"dsLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "ds",
				"aliases": [
					"DS Language",
					"ds"
				],
				"extensions": [
					".ds", ".dst"
				],
				"configuration": "./ds.syntax/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ds",
				"scopeName": "source.ds",
				"path": "./ds.syntax/syntaxes/ds.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "ds.dsview",
				"category": "DS",
				"title": "DS view",
				"icon": {
					"light": "./media/preview-right-light.svg",
					"dark": "./media/preview-right-dark.svg"
				}
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "ds.dsview",
					"when": "editorLangId == ds",
					"group": "markdown-preview-enhanced"
				}
			],
			"editor/title": [
				{
					"command": "ds.dsview",
					"when": "editorLangId == ds",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify && cd server && yarn antlr4ts -visitor -o src src/ds.g4",
		"esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=./client/out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test-compile": "tsc -p ./",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@types/vscode": "^1.66.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"antlr4ts": "^0.5.0-alpha.4",
		"esbuild": "^0.14.38",
		"typescript": "^4.6.2"
	},
	"dependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@types/vscode": "^1.66.0",
		"@vscode/test-electron": "^2.1.3",
		"antlr4ts": "^0.5.0-alpha.4",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"d3": "^7.4.4",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"makefile": "^0.0.2",
		"mocha": "^9.2.2",
		"yarn": "^1.22.18"
	}
}
